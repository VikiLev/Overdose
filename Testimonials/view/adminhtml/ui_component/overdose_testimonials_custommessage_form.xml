<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">overdose_testimonials_custommessage_form.custommessage_form_data_source</item>
		</item>
		<item name="label" translate="true" xsi:type="string">General Information</item>
		<item name="template" xsi:type="string">templates/form/collapsible</item>
	</argument>
	<settings>
		<buttons>
			<button class="Overdose\Testimonials\Block\Adminhtml\CustomMessage\Edit\BackButton" name="back"/>
			<button class="Overdose\Testimonials\Block\Adminhtml\CustomMessage\Edit\DeleteButton" name="delete"/>
			<button class="Overdose\Testimonials\Block\Adminhtml\CustomMessage\Edit\SaveButton" name="save"/>
			<button class="Overdose\Testimonials\Block\Adminhtml\CustomMessage\Edit\SaveAndContinueButton" name="save_and_continue"/>
		</buttons>
		<namespace>overdose_testimonials_custommessage_form</namespace>
		<dataScope>data</dataScope>
		<deps>
			<dep>overdose_testimonials_custommessage_form.custommessage_form_data_source</dep>
		</deps>
	</settings>
	<dataSource name="custommessage_form_data_source">
		<argument name="data" xsi:type="array">
			<item name="js_config" xsi:type="array">
				<item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
			</item>
		</argument>
		<settings>
			<submitUrl path="*/*/save"/>
		</settings>
		<dataProvider class="Overdose\Testimonials\Model\CustomMessage\DataProvider" name="custommessage_form_data_source">
			<settings>
				<requestFieldName>testimonials_id</requestFieldName>
				<primaryFieldName>testimonials_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<fieldset name="general">
		<settings>
			<label>General</label>
		</settings>
		<field formElement="textarea" name="title" sortOrder="10">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">CustomMessage</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">title</label>
				<dataScope>title</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field formElement="textarea" name="message" sortOrder="20">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">CustomMessage</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">message</label>
				<dataScope>message</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field formElement="input" name="upload_pic" sortOrder="30">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">CustomMessage</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">upload_pic</label>
				<dataScope>upload_pic</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
	</fieldset>
</form>
